# Hyperledger Fabric Configuration
FABRIC_NETWORK_NAME=delivery-network
CHANNEL_NAME=deliverychannel
CHAINCODE_NAME=delivery
CHAINCODE_VERSION=1.0

# Organization Configuration
ORG_NAME=DeliveryOrg
ORG_MSP_ID=DeliveryOrgMSP
ORG_DOMAIN=delivery.example.com

# Peer Configuration
PEER_ADDRESS=peer0.delivery.example.com:7051
PEER_GOSSIP_ADDRESS=peer0.delivery.example.com:7051

# Orderer Configuration
ORDERER_ADDRESS=orderer.example.com:7050
ORDERER_DOMAIN=example.com

# CA Configuration
CA_ADDRESS=ca.delivery.example.com:7054

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Fabric SDK Configuration
FABRIC_CFG_PATH=/etc/hyperledger/fabric
CRYPTO_PATH=/organizations

# Connection Profile
CONNECTION_PROFILE_PATH=/app/connection-profile.json

# Admin Credentials (for Fabric network)
ADMIN_USER=admin
ADMIN_PASSWORD=adminpw

# Default Admin User (seeded in MongoDB)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin
DEFAULT_ADMIN_EMAIL=admin@delivery.example.com

# Docker Network
DOCKER_NETWORK_NAME=fabric-delivery-network

# Logging
LOG_LEVEL=INFO

# MongoDB Configuration
MONGO_ROOT_USER=deliveryuser
MONGO_ROOT_PASSWORD=deliverypassword
MONGO_DB=delivery_tracking
MONGO_PORT=27017
MONGO_HOST=mongodb
