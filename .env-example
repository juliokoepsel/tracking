# Hyperledger Fabric Configuration
CHANNEL_NAME=deliverychannel
CHAINCODE_NAME=delivery
CHAINCODE_VERSION=1.0

# Fabric Crypto Material Path
FABRIC_CRYPTO_PATH=/home/leviathan/Desktop/tracking/fabric-network/organizations

# Peer Endpoints (for NestJS API Gateway connections)
PEER_PLATFORM_ENDPOINT=localhost:7051
PEER_SELLERS_ENDPOINT=localhost:8051
PEER_LOGISTICS_ENDPOINT=localhost:9051

# CA Endpoints (for NestJS API user enrollment)
CA_PLATFORM_HOST=localhost
CA_PLATFORM_PORT=7054
CA_SELLERS_HOST=localhost
CA_SELLERS_PORT=8054
CA_LOGISTICS_HOST=localhost
CA_LOGISTICS_PORT=9054

# MongoDB Configuration
MONGO_ROOT_USER=deliveryuser
MONGO_ROOT_PASSWORD=deliverypassword
MONGO_DB=delivery_tracking
MONGO_PORT=27017
MONGO_HOST=mongodb

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-please
JWT_EXPIRES_IN=7d

# Internal API Key for cross-org verification
# Used by APIs to verify users across organizations for sensitive operations
# Generate with: openssl rand -hex 32
INTERNAL_API_KEY=cross-org-internal-key-change-in-production-use-openssl-rand

# Service Discovery Configuration
# Set to 'true' for local development, 'false' for production/Docker networking
DISCOVERY_AS_LOCALHOST=true

# Wallet Encryption Keys (CRITICAL: Change in production!)
# Each organization has its own encryption key for wallet security
# This ensures one org cannot decrypt another org's private keys
# Generate with: openssl rand -hex 32
WALLET_ENCRYPTION_KEY=development-only-key-change-in-production-use-openssl-rand
WALLET_ENCRYPTION_KEY_PLATFORM=platform-dev-key-change-in-production-use-openssl-rand
WALLET_ENCRYPTION_KEY_SELLERS=sellers-dev-key-change-in-production-use-openssl-rand
WALLET_ENCRYPTION_KEY_LOGISTICS=logistics-dev-key-change-in-production-use-openssl-rand
