{
  "info": {
    "name": "Package Delivery Tracking API",
    "description": "Collection for testing the blockchain-based delivery tracking system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "deliveryId",
      "value": "DEL001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Root Endpoint",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/",
          "host": ["{{baseUrl}}"],
          "path": [""]
        }
      }
    },
    {
      "name": "Create Delivery",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Response has success field\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('success');",
              "    pm.expect(jsonData.success).to.be.true;",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"deliveryId\": \"{{deliveryId}}\",\n  \"senderName\": \"John Doe\",\n  \"senderAddress\": \"123 Main Street, New York, NY 10001\",\n  \"recipientName\": \"Jane Smith\",\n  \"recipientAddress\": \"456 Oak Avenue, Los Angeles, CA 90001\",\n  \"packageWeight\": 2.5,\n  \"packageDimensions\": {\n    \"length\": 30.0,\n    \"width\": 20.0,\n    \"height\": 15.0\n  },\n  \"packageDescription\": \"Electronics - Laptop\",\n  \"estimatedDeliveryDate\": \"2025-10-15T10:00:00Z\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/deliveries",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "deliveries"]
        }
      }
    },
    {
      "name": "Get Delivery by ID",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has data field\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('data');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/deliveries/{{deliveryId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "deliveries", "{{deliveryId}}"]
        }
      }
    },
    {
      "name": "Get All Deliveries",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has count field\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('count');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/deliveries",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "deliveries"]
        }
      }
    },
    {
      "name": "Update Delivery Status",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"deliveryStatus\": \"IN_TRANSIT\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/deliveries/{{deliveryId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "deliveries", "{{deliveryId}}"]
        }
      }
    },
    {
      "name": "Update Delivery Address",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"recipientAddress\": \"789 New Street, Los Angeles, CA 90002\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/deliveries/{{deliveryId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "deliveries", "{{deliveryId}}"]
        }
      }
    },
    {
      "name": "Update to Delivered",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"deliveryStatus\": \"DELIVERED\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/v1/deliveries/{{deliveryId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "deliveries", "{{deliveryId}}"]
        }
      }
    },
    {
      "name": "Get Deliveries by Status - Pending",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/deliveries/status/PENDING",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "deliveries", "status", "PENDING"]
        }
      }
    },
    {
      "name": "Get Deliveries by Status - In Transit",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/deliveries/status/IN_TRANSIT",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "deliveries", "status", "IN_TRANSIT"]
        }
      }
    },
    {
      "name": "Get Deliveries by Status - Delivered",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/deliveries/status/DELIVERED",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "deliveries", "status", "DELIVERED"]
        }
      }
    },
    {
      "name": "Get Delivery History",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/deliveries/{{deliveryId}}/history",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "deliveries", "{{deliveryId}}", "history"]
        }
      }
    },
    {
      "name": "Delete (Cancel) Delivery",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/v1/deliveries/{{deliveryId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "v1", "deliveries", "{{deliveryId}}"]
        }
      }
    }
  ]
}
